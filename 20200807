15 (dec) = 1111 (bin) = f (hexadecimal)

#! /bin/bash
n=123
rezultats=0
pakape=1

while [ $n -ne 0 ]
do
        atlikums=$(( $n % 2 ))
        rezultats=$(( $atlikums * $pakape + $rezultats ))
        pakape=$(( $pakape * 10 ))
        n=$(( $n / 2 ))
done

echo "BinƒÅrais skaitlis, skaitlim 123= $rezultats"\

